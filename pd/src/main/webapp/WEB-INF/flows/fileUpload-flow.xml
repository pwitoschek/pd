<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:flow="http://www.springframework.org/schema/webflow-config"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
	http://www.springframework.org/schema/webflow/spring-webflow-2.4.xsd"
	start-state="uploadFile">

	<view-state id="uploadFile" model="uploadFileHandler" view="/WEB-INF/flows/fileUpload/startFileUpload.jsp">
		<var name="fileUploadHandler" class="de.app.pd.entities.fileupload.FileUploadHandler" />
		<transition on="upload" to="finish">
			<evaluate expression="fileUploadHandler.processFile()" />
		</transition>
		<transition on="cancel" to="finish" bind="false" />
	</view-state>

</flow>